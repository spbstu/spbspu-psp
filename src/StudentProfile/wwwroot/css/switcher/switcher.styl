.switcher
  display table
  margin 10px auto 30px

  &__item
    display table-cell
    border #E5E5E5 1px solid
    box-shadow 0 1px 1px 0 rgba(#000, 0.16)

    & + &
      border-left-style none

    &:first-child
      border-radius 3px 0 0 3px

    &:last-child
      border-radius 0 3px 3px 0

  &__link
    position relative
    font-size 14px
    display block
    padding 12px 20px
    text-decoration none
    color #325A46
    transition color 0.3s background 0.3s

    &_active
    &:hover
      background linear-gradient(to bottom, #fafafa, #f0f0f0)
      color #21a649

      &:before
        content ''
        position absolute
        left 0
        right 0
        bottom 0
        height 4px
        background #21a649
        animation jump-horizontal 0.3s forwards
