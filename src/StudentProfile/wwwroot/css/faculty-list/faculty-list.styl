.faculty-list
  max-width 1400px
  margin 20px auto
  padding 0 22px

  &__list
    list-style none
    margin 0
    padding 0

  &__item
    margin 0
    padding 0
    overflow hidden
    border #E5E5E5 1px solid
    border-radius 3px
    box-shadow 0 1px 1px 0 rgba(#000, 0.16)

    & + &
      margin-top 8px

  &__link
    position relative
    font-size 16px
    display block
    padding 15px 30px
    text-decoration none
    color #325A46
    transition color 0.3s background 0.3s

    &:hover
      background linear-gradient(to bottom, #fafafa, #f0f0f0)
      color #21a649

      &:before
        content ''
        position absolute
        left 0
        top 0
        bottom 0
        width 4px
        background #21a649
        animation jump 0.3s forwards

