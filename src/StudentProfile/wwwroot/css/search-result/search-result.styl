.search-result
  margin 0 40px 100px
  padding 0
  list-style none
  border #E5E5E5 1px solid
  border-radius 3px
  box-shadow 0 1px 1px 0 rgba(#000, 0.16)

  &__item
    padding 12px 20px

    & + &
      border-top solid 1px #E5E5E5

  &__title
    font-size 18px
    line-height 24px
    margin-bottom 5px
    color #325A46

  &__comment
    font-size 13px
    margin-top 5px

  &__link
    text-decoration none
    color #325A46
    transition color .3s

    &:hover
      color #21a649
