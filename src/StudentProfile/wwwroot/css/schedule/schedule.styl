.schedule
  margin 0 0 40px
  padding 0
  list-style none

  &__day
    margin 0
    padding 0

    & + &
      margin-top 30px

  &__date
    float left
    padding-top 15px
    width 90px
    text-align right

  &__lessons
    margin 0
    margin-left 110px
    padding 0
    list-style none
    border #E5E5E5 1px solid
    border-radius 3px
    box-shadow 0 1px 1px 0 rgba(#000, 0.16)

  &__empty
    font-size 18px
    width 50%
    margin 0 auto
    padding 20px
    list-style none
    text-align center
    border #E5E5E5 1px solid
    border-radius 3px
    box-shadow 0 1px 1px 0 rgba(#000, 0.16)
